{
  "name": "@konsumation/konsum",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "description": "Collect resource usage in a home environment",
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    },
    {
      "name": "Konstantin Karpman"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "konsum": "./src/konsum-cli.mjs"
  },
  "scripts": {
    "start": "node src/konsum-cli.mjs --config=config start",
    "test": "npm run test:ava",
    "test:ava": "ava --timeout 2m tests/*-ava.mjs tests/*-ava-node.mjs",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m tests/*-ava.mjs tests/*-ava-node.mjs && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme --section=API ./src/**/*.mjs",
    "lint": "npm run lint:docs",
    "lint:docs": "documentation lint ./src/**/*.mjs"
  },
  "dependencies": {
    "@konsumation/db": "^5.1.9",
    "commander": "^9.4.1",
    "config-expander": "^13.0.5",
    "jsonwebtoken": "^9.0.0",
    "koa": "^2.14.1",
    "koa-better-router": "^2.1.1",
    "koa-bodyparser": "^4.3.0",
    "koa-jwt": "^4.0.3",
    "ldapts": "^4.2.1",
    "leveldown": "^6.1.1",
    "levelup": "^5.1.1"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "ava": "^5.1.0",
    "c8": "^7.12.0",
    "documentation": "^14.0.1",
    "execa": "^6.1.0",
    "got": "^12.5.3",
    "ldif": "^0.5.1",
    "npm-pkgbuild": "^10.16.1",
    "semantic-release": "^19.0.5",
    "swagger-jsdoc": "^6.2.7",
    "tmp": "^0.2.1"
  },
  "optionalDependencies": {
    "mf-hosting": "^1.8.0",
    "sd-daemon": "^1.0.2"
  },
  "engines": {
    "node": ">=18.12.1"
  },
  "cpu": [
    "arm64",
    "x64"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/konsumation/konsum.git"
  },
  "bugs": {
    "url": "https://github.com/konsumation/konsum/issues"
  },
  "homepage": "https://github.com/konsumation/konsum#readme",
  "pkgbuild": {
    "content": {
      "${systemd.unit.dir}${name}.service": "pkg/${name}.service",
      "${systemd.unit.dir}${name}.socket": "pkg/${name}.socket",
      "${tmpfiles.config.dir}${name}.conf": "pkg/tmpfiles.conf",
      "${sysusers.config.dir}${name}.conf": "pkg/sysusers.conf",
      "${config.dir}config.json": "config/config.json",
      "${nginx.sites.dir}${name}.conf": "pkg/nginx.conf",
      "${install.dir}": [
        {
          "type": "npm-pack"
        },
        {
          "type": "node-modules"
        }
      ]
    },
    "hooks": "pkg/hooks.sh",
    "backup": "${config.dir}config.json",
    "http.path": "${http.base.path}/${name}/api",
    "name": "konsum"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --available --continue --publish dist"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/*.deb",
              "label": "Debian Package"
            },
            {
              "path": "dist/*.pkg.*",
              "label": "Arch Linux Package"
            }
          ]
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-coveralls",
      "arlac77/template-documentation",
      "arlac77/template-nginx",
      "arlac77/template-node-app",
      "arlac77/template-openapi",
      "arlac77/template-pacman",
      "arlac77/template-systemd",
      "konsumation/template"
    ]
  }
}
